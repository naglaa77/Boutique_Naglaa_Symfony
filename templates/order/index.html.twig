{% extends 'base.html.twig' %}

{% block title %}Valider ma commande - Boutiquenaglaa{% endblock %}

{% block content %}


<h2>Passer ma commande </h2>
<p>choisissez vos préférence avant de passer votre commande sur la Boutiquenaglaa</p>
<hr>
<div class="row">
    <div class="col-md-4">
        {% set formHtml %}
              {{ form_start(form,{action:path('order_recap')}) }}

              {{ form_label(form.addresses,'Choisissez votre adress de livrasion') }}
                <a href = "{{ path('account_address_add') }}">Ajouter une nouvelle adresse</a>
              {{ form_end(form) }}
        {% endset %}
        
            {{ formHtml | replace({'[-]' : '<br>'})|raw}}
        

    </div>
    <div class="col-md-6">
        <div class="text-center">
        <b>Récap de ma commande</b>
        <p> Retrouvez le recapitulatife de vos produits</p>
        </div>
        <div class="order-summary">
            {% for key, product in cart %}
                <div class="row {% if key > 0 %} mt-2 {% endif %}">
                    <div class="col-2">
                        <img src="./uploads/{{ product.product.illustration }}" alt="{{ product.product.name  }}" height= "75px">
                    </div>
                    <div class="col-8 my-auto">
                        {{ product.product.name }}<br>
                        <small>  {{ product.product.subtitle }}</small>
                    </div>
                <div class="col-2 my-auto"> x {{product.quantity}}</div>
                </div>
                
            {% endfor %}
        </div>
       
    </div>
</div>
{% endblock %}
